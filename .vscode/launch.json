{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C Compile Launch & Debug ",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/reportmand",
            "args": ["--no-daemon"],
            "stopAtEntry": false,
            // TODO USE "environment": [{ "name": "config", "value": "Debug" }],
            "cwd": "${workspaceFolder}",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor amd",
                    "ignoreFailures": true
                }
            ],
            //"preLaunchTask": "daemon build file",
            "MIMode" : "gdb",
            "miDebuggerPath": "/usr/sbin/gdb",
            "externalConsole": false
        
          }
    ]
}